		{
			"name": "Protected Route Test",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/auth/test",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"test"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var now         = new Date();",
					"var url         = pm.environment.get(\"baseUrl\");",
					"var token       = pm.environment.get(\"token\");",
					"var tokenExp    = pm.environment.get(\"tokenExp\");",
					"var devUser     = pm.environment.get(\"username\");",
					"var devPass     = pm.environment.get(\"password\");",
					"var refPath     = pm.environment.get(\"refPath\");",
					"var loginPath   = pm.environment.get(\"loginPath\");",
					"",
					"function login() {",
					"    pm.sendRequest({",
					"        url: url + loginPath,",
					"        method: \"POST\",",
					"        header: {",
					"            \"Accept\": \"application/json\",",
					"            \"Content-Type\": \"application/x-www-form-urlencoded\"",
					"        },",
					"        body: {",
					"            mode: \"urlencoded\",",
					"            urlencoded: [",
					"                { key: \"username\", value: devUser },",
					"                { key: \"password\", value: devPass },",
					"            ]",
					"        }",
					"    }, (error, response) => {",
					"        if(error) {",
					"            console.log(error);",
					"        } else if (response) {",
					"            console.log( response.json())",
					"            pm.environment.set(\"token\", response.json().data.token);",
					"            // set new expiration time",
					"            pm.environment.set(\"tokenExp\", new Date().addSeconds(response.json().data.exp))",
					"        }",
					"    })",
					"}",
					"",
					"if(!token) {",
					"    console.log(\"No token - logging in now\");",
					"    login();",
					"}",
					"",
					"var expireTime =",
					"    !!tokenExp",
					"    ? Date.parse(tokenExp)",
					"    : now;",
					"var difference = Math.floor((now - expireTime) / 1000);",
					"console.log(difference)",
					"if (difference > -60) {",
					"    console.log(\"Old token expired, requesting new one...\");",
					"    login();",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}